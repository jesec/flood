{
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "outDir": "../dist"
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../config.js", "../config.ts"]
}
